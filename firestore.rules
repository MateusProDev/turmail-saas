rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Tenant members management
    match /tenants/{tenantId}/members/{memberId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid));

      // owner of the tenant (existing owner) may create new members; users may create their own member doc
      allow create: if request.auth != null && (
        request.auth.uid == memberId ||
        (exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)) && get(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)).data.role == 'owner')
      );

      // update/delete allowed by the member themselves or tenant owner
      allow update, delete: if request.auth != null && (
        request.auth.uid == memberId ||
        (exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)) && get(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)).data.role == 'owner')
      );
    }

    // Tenant document itself: members can read, owner/admin can update
    match /tenants/{tenantId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid));
      allow update: if request.auth != null && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)) && (
        get(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)).data.role in ['owner', 'admin']
      );
      allow create, delete: if false; // Only server can create/delete tenants
    }

    // Tenant settings (sensitive). Only owner/admin of tenant may read or write.
    match /tenants/{tenantId}/settings/{docId} {
      allow read, write: if request.auth != null && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)) && (
        get(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)).data.role in ['owner', 'admin']
      );
    }

    // Tenant campaigns: allow tenant members to read, owner/admin to write
    match /tenants/{tenantId}/campaigns/{campaignId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid));
      allow create, update, delete: if request.auth != null && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)) && (
        get(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid)).data.role in ['owner', 'admin']
      );
    }

    // Users: only the user themselves may read or write their document.
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Allow authenticated users to manage their own subcollections (ai_patterns, ai_campaigns, etc.)
    match /users/{uid}/{subCollection}/{docId} {
      allow read: if request.auth != null && request.auth.uid == uid;
      allow create: if request.auth != null && request.auth.uid == uid;
      allow update: if request.auth != null && request.auth.uid == uid;
      allow delete: if request.auth != null && request.auth.uid == uid;
    }

    // Subscriptions: allow owner to update onboarding progress, server can write all.
    match /subscriptions/{subId} {
      // Permite update apenas se for o owner e s√≥ para onboardingProgress/onboardingCompleted
      allow update: if request.auth != null && resource.data.ownerUid == request.auth.uid &&
        (request.resource.data.keys().hasOnly(['onboardingProgress', 'onboardingCompleted']) ||
         request.resource.data.onboardingProgress != null ||
         request.resource.data.onboardingCompleted != null);
      allow read: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.email != null && request.auth.token != null && resource.data.email == request.auth.token.email)
      );
      allow create, delete: if false;
    }

    // Invoices: server writes only. Clients read only if ownerUid matches.
    match /invoices/{invoiceId} {
      allow create, update, delete: if false;
      allow read: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.email != null && request.auth.token != null && resource.data.email == request.auth.token.email)
      );
    }

    // Checkout sessions: server writes only. Clients read only if ownerUid matches.
    match /checkout_sessions/{sessionId} {
      allow create, update, delete: if false;
      allow read: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.email != null && request.auth.token != null && resource.data.email == request.auth.token.email)
      );
    }

    // Public documents (small public area)
    match /public/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }

    // Contacts: allow tenant or owner-based access. Also allow read by matching email
    // so contacts created without ownerUid but with the same email are visible to that user.
    match /contacts/{contactId} {
      allow create: if request.auth != null && (
        // owner set in request.resource
        request.resource.data.ownerUid == request.auth.uid ||
        // or tenant membership admin/owner
        (request.resource.data.tenantId != null && exists(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId)/members/$(request.auth.uid)) && get(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId)/members/$(request.auth.uid)).data.role in ['owner','admin'])
      );
      allow read: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.email != null && request.auth.token != null && resource.data.email == request.auth.token.email) ||
        (resource.data.tenantId != null && exists(/databases/$(database)/documents/tenants/$(resource.data.tenantId)/members/$(request.auth.uid)) && get(/databases/$(database)/documents/tenants/$(resource.data.tenantId)/members/$(request.auth.uid)).data.role in ['owner','admin'])
      );
      allow update, delete: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.tenantId != null && exists(/databases/$(database)/documents/tenants/$(resource.data.tenantId)/members/$(request.auth.uid)) && get(/databases/$(database)/documents/tenants/$(resource.data.tenantId)/members/$(request.auth.uid)).data.role in ['owner','admin'])
      );
    }

    // Campaigns: allow tenant or owner-based access
    match /campaigns/{campaignId} {
      allow create: if request.auth != null && (
        request.resource.data.ownerUid == request.auth.uid ||
        (request.resource.data.tenantId != null && exists(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId)/members/$(request.auth.uid)) && get(/databases/$(database)/documents/tenants/$(request.resource.data.tenantId)/members/$(request.auth.uid)).data.role in ['owner','admin'])
      );

      // Allow reads for:
      // 1. The owner (ownerUid matches)
      // 2. Tenant members (exists in tenantId/members)
      // 3. Development: campaigns without ownerUid (can be removed in production)
      allow read: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.ownerUid == null) ||
        (resource.data.tenantId != null && exists(/databases/$(database)/documents/tenants/$(resource.data.tenantId)/members/$(request.auth.uid)))
      );

      allow update, delete: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.tenantId != null && exists(/databases/$(database)/documents/tenants/$(resource.data.tenantId)/members/$(request.auth.uid)) && get(/databases/$(database)/documents/tenants/$(resource.data.tenantId)/members/$(request.auth.uid)).data.role in ['owner','admin'])
      );
    }

    // Image Gallery: allow tenant members to read/write images for their tenant
    // Path: /clients/{tenantId}/gallery/images
    match /clients/{tenantId}/gallery/{docId} {
      allow read, write: if request.auth != null && 
        exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid));
    }

    // Tenant counters: allow tenant members to read usage counters
    match /tenants/{tenantId}/counters/{counterId} {
      allow read: if request.auth != null && exists(/databases/$(database)/documents/tenants/$(tenantId)/members/$(request.auth.uid));
      allow write: if false; // Only server can write counters
    }

    // Fallback: deny everything else
    match /{document=**} {
      allow read, write: if false;
    }
  }
}