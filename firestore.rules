rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Default deny everything
    match /{document=**} {
      allow read, write: if false;
    }

    // Users: only the user themselves may read or write their document.
    match /users/{uid} {
      allow read, write: if request.auth != null && request.auth.uid == uid;
    }

    // Subscriptions: only server (Admin SDK) can write.
    // Subscriptions: only server (Admin SDK) can write.
    // Clients may read if they are the owner (ownerUid) OR if the subscription
    // document's email matches the authenticated user's email. The latter
    // allows clients created by webhooks to be readable by the user when
    // ownerUid wasn't populated. Keep write operations restricted to server.
    match /subscriptions/{subId} {
      allow create, update, delete: if false;
      allow read: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.email != null && request.auth.token != null && resource.data.email == request.auth.token.email)
      );
    }

    // Invoices: server writes only. Clients read only if ownerUid matches.
    match /invoices/{invoiceId} {
      allow create, update, delete: if false;
      allow read: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.email != null && request.auth.token != null && resource.data.email == request.auth.token.email)
      );
    }

    // Checkout sessions: server writes only. Clients read only if ownerUid matches.
    match /checkout_sessions/{sessionId} {
      allow create, update, delete: if false;
      allow read: if request.auth != null && (
        (resource.data.ownerUid == request.auth.uid) ||
        (resource.data.email != null && request.auth.token != null && resource.data.email == request.auth.token.email)
      );
    }

    // Public documents (if you need a small public area)
    match /public/{docId} {
      allow read: if true;
      allow write: if request.auth != null && request.auth.token.admin == true;
    }
  }
}